<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Buttons -->

    <style name="Widget.Perfectus.Button" parent="Widget.MaterialComponents.Button" tools:ignore="ResourceName">
        <item name="android:layout_height">?attr/design_button_height</item>
    </style>

    <style name="Widget.Perfectus.TextButton" parent="Widget.MaterialComponents.Button.TextButton" tools:ignore="ResourceName">
        <item name="android:layout_height">?attr/design_button_height</item>
    </style>

    <!-- Text Inputs -->

    <style name="Widget.Perfectus.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" tools:ignore="ResourceName">
        <item name="hintTextColor">?attr/design_hint_text_color</item>
        <item name="boxStrokeColor">?attr/design_box_stroke_color</item>
    </style>

    <style name="Widget.Perfectus.TextInput.Email" tools:ignore="ResourceName" />

    <style name="Widget.Perfectus.TextInput.Password" tools:ignore="ResourceName">
        <item name="passwordToggleEnabled">true</item>
    </style>

    <!-- Edit Texts -->

    <style name="Widget.Perfectus.EditText" parent="" tools:ignore="ResourceName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Widget.Perfectus.EditText.Email" tools:ignore="ResourceName">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="Widget.Perfectus.EditText.Password" tools:ignore="ResourceName">
        <item name="android:inputType">textPassword</item>
    </style>

    <!-- Card View -->

    <style name="Widget.Perfectus.Card.Snackbar" parent="" tools:ignore="ResourceName">
        <item name="cardBackgroundColor">?attr/design_card_background_snackbar_color</item>
    </style>

    <style name="Widget.Perfectus.Card" parent="" tools:ignore="ResourceName">
        <item name="cardElevation">?attr/design_card_elevation</item>
        <item name="cardCornerRadius">?attr/design_card_corners_radius</item>
        <item name="cardBackgroundColor">?attr/design_card_background_color</item>
    </style>

    <style name="Slide" tools:ignore="ResourceName">
        <item name="android:windowEnterAnimation">@anim/design_slide_up</item>
        <item name="android:windowExitAnimation">@anim/design_slide_down</item>
    </style>

    <!-- Bottom Sheet Style -->

    <style name="Perfectus.BottomSheetMenuStyle" parent="Widget.Design.BottomSheet.Modal" tools:ignore="ResourceName">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Bottom Sheet Card View -->

    <style name="Perfectus.BottomSheetCardView" parent="@style/Widget.MaterialComponents.CardView" tools:ignore="ResourceName">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
        <item name="cardBackgroundColor">?attr/design_background_bottom_sheet_card_view_color</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="" tools:ignore="ResourceName">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">36dp</item>
        <item name="cornerSizeTopLeft">36dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Text View -->

    <style name="Perfectus.TextAppearanceHeader" parent="@style/TextAppearance.MaterialComponents.Headline5" tools:ignore="ResourceName">
        <item name="android:textColor">@color/design_text_primary</item>
    </style>

    <style name="Perfectus.TextAppearanceSubtitle" parent="@style/TextAppearance.MaterialComponents.Subtitle2" tools:ignore="ResourceName">
        <item name="android:textColor">@color/design_text_primary</item>
    </style>


</resources>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme for Day Mode. -->
    <style name="Theme.Perfectus" parent="Theme.MaterialComponents.Light.NoActionBar" tools:ignore="ResourceName">
        <item name="colorPrimary">@color/design_brand</item>
        <item name="colorPrimaryDark">@color/design_brand_dark</item>
        <item name="colorAccent">@color/design_accent</item>
        <item name="design_fab_background_color">@color/design_fab_background</item>
        <item name="design_hint_text_color">@color/design_accent</item>
        <item name="design_box_stroke_color">@color/design_accent</item>
        <item name="design_button_height">50dp</item>
        <item name="design_card_background_color">@color/design_card_background</item>
        <item name="design_card_corners_radius">16dp</item>
        <item name="design_card_elevation">8dp</item>
        <item name="design_background_color">@color/design_background</item>
        <item name="design_background_secondary">@color/design_color_background_secondary</item>
    </style>

    <!-- Full Screen Dialog -->

    <style name="Perfectus.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog" tools:ignore="ResourceName">
        <item name="colorPrimary">@color/design_color_full_screen_dialog_brand</item>
        <item name="colorPrimaryDark">@color/design_color_full_screen_dialog_brand_dark</item>
        <item name="colorAccent">@color/design_color_full_screen_dialog_accent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/design_accent</item>
        <item name="design_card_background_snackbar_color">
            @color/design_full_screen_dialog_snackbar_error_background_color
        </item>
        <item name="design_full_screen_dialog_details_label_color">
            @color/design_color_full_screen_dialog_details_label
        </item>
        <item name="design_full_screen_dialog_details_value_color">
            @color/design_color_full_screen_dialog_details_value
        </item>
        <item name="design_full_screen_dialog_details_background_color">
            @color/design_color_full_screen_dialog_details_background
        </item>
        <item name="design_full_screen_dialog_details_separator">
            @color/design_color_full_screen_dialog_details_separator
        </item>
        <item name="design_full_screen_dialog_background">
            @color/design_color_full_screen_dialog_background
        </item>

    </style>

    <!-- Bottom Sheet Dialog -->

    <style name="Perfectus.BottomSheetMenu" parent="Theme.MaterialComponents.Light.BottomSheetDialog" tools:ignore="ResourceName">
        <item name="colorPrimary">@color/design_color_bottom_sheet_menu_brand</item>
        <item name="colorPrimaryDark">@color/design_color_bottom_sheet_menu_brand_dark</item>
        <item name="colorAccent">@color/design_color_bottom_sheet_menu_accent</item>
        <item name="bottomSheetStyle">@style/Perfectus.BottomSheetMenuStyle</item>
        <item name="design_background_bottom_sheet_card_view_color">
            @color/design_bottom_sheet_card_view_background
        </item>
        <item name="design_bottom_sheet_menu_separator_color">
            @color/design_color_bottom_sheet_menu_separator
        </item>
    </style>

</resources>
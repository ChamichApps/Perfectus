<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_account"
    app:startDestination="@id/destination_fragment_sign_in">

    <fragment
        android:id="@+id/destination_fragment_sign_in"
        android:name="app.chamich.feature.authentication.ui.signin.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/authentication_fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/destination_fragment_sign_up" />
        <action
            android:id="@+id/account_action_destination_fragment_sign_in_to_account_forgotpasswordfragment"
            app:destination="@id/destination_forgot_password" />
    </fragment>

    <fragment
        android:id="@+id/destination_fragment_sign_up"
        android:name="app.chamich.feature.authentication.ui.signup.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/authentication_fragment_sign_up" />
    <fragment
        android:id="@+id/destination_forgot_password"
        android:name="app.chamich.feature.authentication.ui.password.forgot.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/authentication_fragment_forgot_password" />
</navigation>
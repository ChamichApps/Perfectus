<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="app.chamich.feature.authentication.ui.password.forgot.ForgotPasswordViewModel" />

        <variable
            name="fragment"
            type="app.chamich.feature.authentication.ui.password.forgot.ForgotPasswordFragment" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.signin.SignInFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_forgot_password"
            style="@style/Widget.Perfectus.Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/design_margin_large"
            android:layout_marginLeft="@dimen/design_margin_large"
            android:layout_marginTop="128dp"
            android:layout_marginEnd="@dimen/design_margin_large"
            android:layout_marginRight="@dimen/design_margin_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linear_layout_forgot_password_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/design_margin_large"
                    android:layout_marginTop="@dimen/design_margin_large"
                    android:layout_marginRight="@dimen/design_margin_large"
                    android:layout_marginBottom="@dimen/design_margin_large"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_layout_forgot_password_email"
                        style="@style/Widget.Perfectus.TextInput.Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/design_margin_small"
                        android:hint="@string/account_edittext_hint_email">

                        <EditText
                            android:id="@+id/edit_text_forgot_password_email"
                            style="@style/Widget.Perfectus.EditText.Email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_restore_password"
                        style="@style/Widget.Perfectus.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/design_margin_small"
                        android:onClick="@{(view) -> fragment.onClickResetPassword(view)}"
                        android:text="@string/account_button_text_restore_password" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress_forget_password"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>